<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transactions">

    <TextView
        android:id="@+id/welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        tools:text="Welcome, Mary Okonkwo"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/welcome_textview"
    android:id="@+id/layout_ballance"
    >
    <TextView
        android:id="@+id/current_balance_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_current_balance"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/balance_amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@id/current_balance_textview"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"

        tools:text="20,000"/>



</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_ballance"
        android:id="@+id/layout_owning"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:id="@+id/tv_owning"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>





    </LinearLayout>






    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_owning">

        <Button
            android:id="@+id/pay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Pay"
            android:padding="15dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="25dp"
            android:layout_height="0dp"/>

       <!-- <Button
            android:id="@+id/check_balance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_balance"
            android:padding="15dp"
            android:backgroundTint="@color/colorGreen"
            android:textColor="@android:color/white"/>-->
        <Button
            android:id="@+id/top_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_up"
            android:padding="15dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_row"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn_logut"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:padding="15dp"
            android:backgroundTint="@color/orange_700"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>